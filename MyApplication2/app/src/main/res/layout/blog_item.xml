<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#09000000">

    <TextView
        android:id="@+id/prd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"

        android:text="X"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="27dp"></TextView>

    <TextView
        android:id="@+id/prd_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prd_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"

        android:text="X"
        android:textColor="@color/black"
        android:textSize="23dp"></TextView>

    <TextView
        android:id="@+id/prd_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prd_amount"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="X"
        android:textColor="#8F000000"
        android:textSize="20dp"></TextView>


</RelativeLayout>